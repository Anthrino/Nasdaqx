<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anthrino.nasdaqx.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Company Search"
        android:layout_margin="20dp"
        android:textSize="45sp"
        android:textColor="@color/colorText"/>


    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:iconifiedByDefault="false"
        android:textColor="@color/colorAccent"
        android:queryHint="Enter name of company.."
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="48dp">

        <TextView
            android:id="@+id/comp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comp_symbol"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="( Symbol )"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/comp_stockex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="StockEx"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/comp_pricing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Stock Pricing"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/comp_epsratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Earnings per Share"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/more_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:textColor="@color/colorPrimary"
            android:text="Additional Info" />


    </LinearLayout>
</RelativeLayout>
